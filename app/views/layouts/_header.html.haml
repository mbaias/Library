%nav.navbar.navbar-default
	.container
		.navbar-header
			%button.navbar-toggle.collapsed{"data-target" => "bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			= link_to 'Library', root_path, class: "navbar-brand", id: "logo"
		#bs-example-navbar-collapse-1.collapse.navbar-collapse
			%ul.nav.navbar-nav
				%li= link_to 'Category', categories_path
				%li= link_to 'Books', books_path
				- if logged_in? && (current_user.admin? == true)
					%li.dropdown
						%a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
							Actions
							%span.caret
						%ul.dropdown-menu
							%li
								= link_to "New category", new_category_path
							%li.divider
							%li
								= link_to "New book", new_book_path
			.pull-right.signing
				- if logged_in?
					= link_to "#{current_user.username}", user_path(current_user.id), class: "btn btn-link"
					= link_to "Logout", session_path(session), method: :delete, class: "btn btn-danger"
				- else
					= link_to "Sign in", login_path, class: "btn btn-default sign_in"
					= link_to "Sign up", signup_path, class: "btn btn-primary sign_in"